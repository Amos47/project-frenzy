<div class="row">
  <h1>Professor</h1>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @professor.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @professor.email %>
  </p>
</div>

<% if session[:professor_id] == @professor.id %>
  <div class="row">
    <%= link_to 'Edit', edit_professor_path(@professor) %>
    | <%= link_to 'Delete account', professor_path(@professor), method: :delete,
            data: { confirm: "This will delete your account, and all projects. Are you sure?" }  %>
  </div>
<% end %>
