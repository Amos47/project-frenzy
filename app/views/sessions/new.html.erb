<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, @email ,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :email %>
    <%= password_field_tag :email, nil, class: "form-control" %>
  </div>
  <%= submit_tag "Submit", class: "btn btn-primary" %>

<% end %>
